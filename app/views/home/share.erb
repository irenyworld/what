
<div class="container" style = "margin-top: 30px">

    <h2><font color="white">Do you have any questions about sleep? Ask us! </font> </h2>

   <div class="container" style = "margin-top: 30px">
    <% @posts.each do |post| %>
        <p><%= post.title %> </p>
        <p><%= post.content %> </p>
        <p><%= post.created_at %></p>
        <hr>
        <% post.replies.each do |reply| %>
            <%= reply.id %>
            <%= reply.content %>
            
        <%end%>
        <form action="<%=post.id%>/reply_create" method='post'>
        <div class="form-group">
        <input type="text" class="form-control" name="content" placeholder="reply">
      </div>
       <button type="submit" class="btn btn-default">Comment</button>
        </form>
      
        
    <%end%>
    
    <form action="/board/create" method="post">
      <div class="form-group">
        <input type="text" class="form-control" name="title" placeholder="Title">
      </div>
      <div class="form-group">
          <textarea class='form-control' name="content" placeholder="Content" rows=10></textarea>
      </div>
     
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>